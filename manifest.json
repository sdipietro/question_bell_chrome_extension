{
  "manifest_version": 3,
  "name": "Question Bell",
  "version": "1.0",
  "description": "Plays a sound when a new question is asked.",
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "webNavigation",
    "background"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/notification-bell-16.png",
      "48": "icons/notification-bell-32.png",
      "128": "icons/notification-bell-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}